{
	"name": "Python Development Container",
	"dockerComposeFile": [
        "../docker-compose.yml",
        "docker-compose.yml"
    ],
    "service": "python",
    "workspaceFolder": "/workspace",
	"settings": { 
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.pythonPath": "PYTHONPATH"
    },
    "remoteUser": "USER",
    "postCreateCommand": "cd src && poetry install",
	"extensions": [
        "ms-python.python",
        "mutantdino.resourcemonitor",
        "njpwerner.autodocstring"
    ]
}
