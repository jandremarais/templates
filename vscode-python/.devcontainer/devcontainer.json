{
	"name": "${containerEnv:PROJECT} Development Container",
	"dockerComposeFile": [
        "../docker-compose.yml",
        "docker-compose.yml"
    ],
    "service": "python",
    "workspaceFolder": "/workspace",
	"settings": { 
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.pythonPath": "/home/${containerEnv:USERNAME}/.virtualenvs/${containerEnv:PROJECT}/bin/python"
    },
    "remoteUser": "${containerEnv:USERNAME}",
    "postCreateCommand": "cd src && poetry install",
	"extensions": [
        "ms-python.python",
        "mutantdino.resourcemonitor",
        "njpwerner.autodocstring"
    ]
}